{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>IsPremium</th>
                <td>{{ room.isPremium ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Bookings</th>
                <td>
                    <ul>
                    {% for booking in room.bookings %}
                        <li>{{ booking.startDate|format_datetime(pattern='dd/MM/Y HH:mm') }} - {{ booking.endDate|format_datetime(pattern='dd/MM/Y HH:mm') }}</li>
                    {% else %}
                    No booking yet.
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
